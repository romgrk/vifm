highlight /.*\.axa$|.*\.oga$|.*\.spx$|.*\.xspf$/I cterm=none ctermfg=default ctermbg=92
highlight /.*\.css$|.*\.less$|.*\.sass$|.*\.scss$/I ctermfg=39 ctermbg=default

